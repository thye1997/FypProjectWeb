@using FypProject.ViewModel
@model DashboardViewModel

@{
    DashboardViewModel viewModel = Model;
}

<div class="mt-3 container-fluid">

<div class="row d-flex justify-content-center p-3">
    <div class="col-sm-4">
        <div class="card text-center" style="background-color: #2ecc71;">
            <div class="card-body">
                <i class="fa fa-calendar fa-3x mb-2" aria-hidden="true" style="color: white;"></i>
                <p class="card-text font-weight-normal  dashboard-value-text">@viewModel.totalUpcoming</p>
                <h5 class="card-title font-weight-bold" style="color:white;">Total Upcoming</h5>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center" style="background-color: #205ddb;">
            <div class="card-body">
                <i class="fa fa-calendar-check-o fa-3x mb-2" aria-hidden="true" style="color:white;"></i>
                <p class="card-text font-weight-normal dashboard-value-text">@viewModel.totalPast</p>
                <h5 class="card-title font-weight-bold" style="color:white;">Total Past</h5>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center" style="background-color:#9b59b6">
            <div class="card-body">
                <i class="fa fa-calendar-times-o fa-3x mb-2" aria-hidden="true" style="color:white;"></i>
                <p class="card-text font-weight-normal dashboard-value-text">@viewModel.totalNoShow</p>
                <h5 class="card-title font-weight-bold" style="color:white;">Total No Show</h5>
            </div>
        </div>
    </div>
</div>
</div>
<nav>
    <div class="nav nav-tabs mt-5 justify-content-end" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" data-toggle="tab" href="#nav-inqueue" role="tab" aria-controls="nav-inqueue" aria-selected="true">In Queue</a>
        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-ongoing" role="tab" aria-controls="nav-ongoing" aria-selected="false">On going</a>
        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-complete" role="tab" aria-controls="nav-complete" aria-selected="false">Done</a>
    </div>
</nav>
<div class="tab-content mt-4" id="nav-tabContent">
    <div class="text-center tab-pane fade show active" id="nav-inqueue" role="tabpanel" aria-labelledby="nav-inqueue-tab">
        <div class="table-responsive p-3" id="appt-list-table-div">
            <table class="table table-bordered dt-responsive" width="100%" id="inqueue-appt-list-table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>NRIC</th>
                        <th>Phone Number</th>
                        <th>Date</th>
                        <th>Slot</th>
                        <th>Service</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="text-center tab-pane fade" id="nav-ongoing" role="tabpanel" aria-labelledby="nav-ongoing-tab">
        <div class="table-responsive p-3" id="appt-list-table-div">
            <table class="table table-bordered dt-responsive" width="100%" id="ongoing-appt-list-table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>NRIC</th>
                        <th>Phone Number</th>
                        <th>Date</th>
                        <th>Slot</th>
                        <th>Service</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="text-center tab-pane fade" id="nav-complete" role="tabpanel" aria-labelledby="nav-complete-tab">
        <div class="table-responsive p-3">
            <table class="table table-bordered dt-responsive" width="100%" id="complete-appt-list-table">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>NRIC</th>
                        <th>Phone Number</th>
                        <th>Date</th>
                        <th>Slot</th>
                        <th>Service</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/Dashboard/Dashboard.js"></script>

}