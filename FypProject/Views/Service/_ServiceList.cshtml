@model ServiceViewModel
@{
    ServiceViewModel viewModel = Model;

}
<div class="text-center">
    <div class="table-responsive">
        <table class="table table-bordered" id="service-list-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Service Name</th>
                    <th>Created By</th>
                    <th>Created On</th>
                    <th>Action</th>
                </tr>
            </thead>
            @if (viewModel.DataList.Count > 0)
            {  int count = 1;
                @foreach (var services in viewModel.DataList)
                {
                    <tbody>
                        <tr>
                            <td>@count</td>
                            <td>@services.serviceName</td>
                            <td>@services.createdBy</td>
                            <td>@services.createdOn</td>
                            <td>
                                <a href="#" onclick="getService(@services.Id)"><i class="fa fa-trash fa-lg"></i></a>
                            </td>
                        </tr>
                    </tbody>
                    count++;
                }
            }
        </table>
    </div>

    @if (viewModel.DataList.Count == 0)
    {
        <p>Service not Found.</p>
    }
</div>
<div class="modal" tabindex="-1" id="delete-alert-dialog" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <form>
            <div class="modal-content  pt-2 pl-3 pr-3 pb-3">
                <div class="modal-header">
                    <h5 class="modal-title alert-heading">Delete Warning</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="DeleteService()">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>
