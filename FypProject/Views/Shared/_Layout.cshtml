@using FypProject.Config

@{
    GetViewContext viewContext = new GetViewContext(ViewContext);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Patient Appointment System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/customDatatables.css" />
    <link rel="stylesheet" href="~/lib/customcss/sidebar.css" />
    <link rel="stylesheet" href="~/css/error.css" />
    <link rel="stylesheet" href="~/css/overrideBootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <partial name="Partial/Sidebar" />

    <div id="page-content-wrapper">
        <div class="header">
            <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm">
                <span><button class="btn btn-outline-primary" id="menu-toggle">&#9776;</button></span>
                <a class="navbar-brand" style="padding-left:5px;">@viewContext.returnTitle()</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav ml-auto">
                        <li class="col-auto"><a>@User.FindFirst(ClaimTypes.Role).Value</a></li>
                        <li class="col-auto"><a>@User.FindFirst("FullName").Value</a></li>
                        <li class="col-auto"><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                }
            </nav>
        </div>

        <!--<div class="container-fluid">-->
            <main role="main" class="main-content mt-5">
                @RenderBody()
            </main>
        <!--</div>-->
    </div>
    <footer class="border-top footer text-muted">
        @if (1 == 2)
        {<div class="container">
                &copy; 2021 - FypProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>}
    </footer>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/Shared/alertmessage.js"></script>
    <script src="~/js/Shared/buttonvisibility.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!--<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>-->
    <script src="~/js/sidebar.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
